<% @reviews.each do |review| %>

  <dl class="dl-horizontal">
    <dt>User:</dt>
    <dd><%= User.find_by(id: review.user_id).first_name %></dd>
    <dt>Rating:</dt>
    <dd><%= review.rating %>/5</dd>
    <dt>Description:</dt>
    <dd><%= review.description %></dd>

    <% if current_user && current_user.id == review.user_id %>
      <dt></dt>
      <dd><%= link_to 'Delete Review',  product_review_path(product_id: @product[:id], id: review[:id]),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' } %>
      </dd>
    <% end %>
  </dl>

<% end %>
